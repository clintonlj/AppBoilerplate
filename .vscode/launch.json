{
  "version": "0.2.0",
  "configurations": [
      {
          "name": "Launch Chrome against localhost",
          "type": "chrome",
          "request": "launch",
          "url": "http://localhost:4200",
          "webRoot": "${workspaceFolder}",
          "sourceMaps": true,
          "trace": true
      },
      {
          "name": "Launch Edge against localhost",
          "type": "msedge",
          "request": "launch",
          "url": "http://localhost:4200",
          "webRoot": "${workspaceFolder}",
          "sourceMaps": true,
          "trace": true
      },
      {
          "name": "Attach to Chrome",
          "type": "chrome",
          "request": "attach",
          "port": 9222,
          "url": "http://localhost:4200",
          "webRoot": "${workspaceFolder}/src",
          "sourceMaps": true,
          "trace": true
      },
      {
          "name": "Attach to Edge",
          "type": "msedge",
          "request": "attach",
          "port": 9222,
          "url": "http://localhost:4200",
          "webRoot": "${workspaceFolder}/src",
          "sourceMaps": true,
          "trace": true
      }
  ]
}